<!DOCTYPE html>
<html lang="en">

<head>
    <!-- <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <h1>Contact List</h1>
    <ul class="todo-list">
        <% for(let i of todoTasks) { %>
        <% if (i._id == idTask) { %>
        <li class="todo-list-item">
            <form action="/update-contact/?id=<%= i._id %>" method="POST">
                <input type="text" value="<%= i.name %>" name="name" required>
                <input type="number" value="<%= i.phoneNo %>" name="phoneNo" required>
                <button type="submit">Confirm</button>
                <a href="/" class="cancel">Cancel</a>
            </form>
        </li>
        <% } else { %>
            <li>
                <div class="p-elements">
                <p><%= i.name %></p>
                <p><%= i.phoneNo %></p>
                </div>
                <div class="edit">
                    <a href="/update-contact/?id=<%= i._id %>">
                        <i><button>edit</button></i>
                    </a>
                </div>
                <div class="delete">
                    <a href="/delete-contact/?id=<%= i._id %>">
                        <i><button>del</button></i>
                    </a>
                </div>
            </li>
        <% } %>
        <% } %>
    </ul>
    <form action="/create-contact" method="post">
        <input type="text" name="name" placeholder="enter your name" required>
        <input type="text" name="phoneNo" placeholder="enter phoneno" required>
        <button type="submit">Add Contact</button>
    </form>
    <script src="/js/home.js"></script>
</body>

</html>